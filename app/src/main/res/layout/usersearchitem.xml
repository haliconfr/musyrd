<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="#121613"
    android:layoutDirection="locale">

    <TextView
        android:id="@+id/userItemName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="3"
        android:text="halicon"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/userItemImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userItemImage"
        app:layout_constraintTop_toTopOf="@+id/userItemImage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/userRevCount"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_weight="3"
        android:text="0 reviews"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/userItemName"
        app:layout_constraintStart_toStartOf="@+id/userItemName"
        app:layout_constraintTop_toBottomOf="@+id/userItemName"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/userItemImage"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/userItemName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>