<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="#121613"
    android:layoutDirection="locale">

    <TextView
        android:id="@+id/relitemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="28/12/28"
        android:textColor="#858585"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/relitemArt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/relitemArt"
        app:layout_constraintTop_toBottomOf="@+id/relitemUsr"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/relitemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#858585"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/relitemArt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/relitemArt"
        app:layout_constraintTop_toBottomOf="@+id/relitemArt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/relitemUsr"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="3"
        android:text="halicon"
        android:textColor="#888888"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/relitemArt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relitemArt"
        app:layout_constraintTop_toTopOf="@+id/relitemArt"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/relitemArt"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relitemUsr"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/relitemStars"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/relitemArt"
        app:layout_constraintTop_toBottomOf="@+id/relitemText"
        app:srcCompat="@drawable/fivestar" />

</androidx.constraintlayout.widget.ConstraintLayout>